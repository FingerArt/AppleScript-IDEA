<idea-plugin version="2">
    <id>com.idea.plugin.applescript</id>
    <name>AppleScript for IDEA</name>
    <version>1.0</version>
    <vendor email="andrey.dernov@gmail.com" url="https://twitter.com/ant_druha">Andrey Dernov</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!--key="Script Suite Registry"-->
        <!--bundle="messages.LangBundle"-->
        <!--<projectConfigurable groupId="language"-->
        <!--id="Script Suite Registry"-->
        <!--displayName="AppleScript Suite Registry mappings"-->
        <!--instance="com.idea.plugin.applescript.lang.ide.libraries.AppleScriptSuiteRegistryConfigurable"/>-->

        <!--<projectService serviceInterface="com.idea.plugin.applescript.lang.ide.libraries.ScriptSuiteRegistryMappings"-->
        <!--serviceImplementation="com.idea.plugin.applescript.lang.ide.libraries.ScriptSuiteRegistryMappings">-->
        <!--</projectService>-->

        <!-- Add your extensions here -->

        <!--<library.type implementation="com.idea.plugin.applescript.lang.ide.libraries.AppleScriptLibraryType"/>-->
        <applicationService
                serviceInterface="com.idea.plugin.applescript.lang.ide.sdef.AppleScriptSystemDictionaryRegistryService"
                serviceImplementation="com.idea.plugin.applescript.lang.ide.sdef.AppleScriptSystemDictionaryRegistryService"/>
        <projectService
                serviceInterface="com.idea.plugin.applescript.lang.ide.sdef.AppleScriptProjectDictionaryService"
                serviceImplementation="com.idea.plugin.applescript.lang.ide.sdef.AppleScriptProjectDictionaryService"/>

        <fileTypeFactory implementation="com.idea.plugin.applescript.AppleScriptFileTypeFactory"/>

        <internalFileTemplate name="AppleScript File.scpt"/>

        <!--<createFromTemplateHandler implementation="com.idea.plugin.applescript.lang.ide.actions.AppleScriptCreateFromTemplateHandler"/>-->

        <lang.parserDefinition language="AppleScript"
                               implementationClass="com.idea.plugin.applescript.lang.parser.AppleScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory key="AppleScript"
                                       implementationClass="com.idea.plugin.applescript.lang.ide.highlighting.AppleScriptSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.idea.plugin.applescript.lang.ide.highlighting.AppleScriptColorsAndFontsPage"/>

        <lang.braceMatcher language="AppleScript"
                           implementationClass="com.idea.plugin.applescript.lang.ide.highlighting.AppleScriptPairedBraceMatcher"/>


        <lang.formatter language="AppleScript"
                        implementationClass="com.idea.plugin.applescript.lang.formatter.AppleScriptFormattingModelBuilder"/>

        <codeStyleSettingsProvider
                implementation="com.idea.plugin.applescript.lang.formatter.settings.AppleScriptCodeStyleSettingsProvider"/>

        <langCodeStyleSettingsProvider
                implementation="com.idea.plugin.applescript.lang.formatter.settings.AppleScriptLanguageCodeStyleSettingsProvider"/>

        <lang.commenter language="AppleScript"
                        implementationClass="com.idea.plugin.applescript.lang.ide.AppleScriptCommenter"/>

        <annotator language="AppleScript"
                   implementationClass="com.idea.plugin.applescript.lang.ide.annotator.AppleScriptColorAnnotator"/>

        <lang.documentationProvider language="AppleScript"
                                    implementationClass="com.idea.plugin.applescript.lang.ide.AppleScriptDocumentationProvider"/>
        <!--not used -->
        <targetElementEvaluator language="AppleScript"
                                implementationClass="com.idea.plugin.applescript.lang.resolve.AppleScriptTargetElementEvaluator"/>

        <!--<gotoDeclarationHandler implementation="com.idea.plugin.applescript.lang.resolve.AppleScriptGotoDeclarationHandler"/>-->

        <!-- find usages-->
        <lang.findUsagesProvider language="AppleScript"
                                 implementationClass="com.idea.plugin.applescript.lang.ide.findUsages.AppleScriptFindUsagesProvider"/>
        <readWriteAccessDetector
                implementation="com.idea.plugin.applescript.lang.ide.findUsages.AppleScriptReadWriteAccessDetector"/>
        <usageTypeProvider
                implementation="com.idea.plugin.applescript.lang.ide.findUsages.AppleScriptUsageTypeProvider"/>
        <pom.declarationSearcher
                implementation="com.idea.plugin.applescript.lang.ide.search.AppleScriptHandlerDeclarationSearcher"/>
        <referencesSearch
                implementation="com.idea.plugin.applescript.lang.ide.search.AppleScriptHandlerReferencesSearch"/>

        <referencesSearch
                implementation="com.idea.plugin.applescript.lang.ide.search.AppleScriptDictionaryComponentReferencesSearch"/>

        <lang.refactoringSupport language="AppleScript"
                                 implementationClass="com.idea.plugin.applescript.lang.ide.refactoring.AppleScriptRefactoringSupportProvider"/>

        <!-- rename refactoring -->
        <lang.namesValidator language="AppleScript"
                             implementationClass="com.idea.plugin.applescript.lang.util.AppleScriptNamesValidator"/>


        <elementDescriptionProvider
                implementation="com.idea.plugin.applescript.lang.ide.findUsages.AppleScriptElementDescriptionProvider"/>

        <lang.refactoringSupport language="AppleScript"
                                 implementationClass="com.idea.plugin.applescript.lang.ide.refactoring.AppleScriptElementRefactoringSupportProvider"/>
        <lang.psiStructureViewFactory language="AppleScript"
                                      implementationClass="com.idea.plugin.applescript.lang.ide.structure.AppleScriptStructureViewFactory"/>
        <lang.structureViewExtension
                implementation="com.idea.plugin.applescript.lang.ide.structure.AppleScriptStructureViewExtension"/>

        <completion.contributor language="AppleScript"
                                implementationClass="com.idea.plugin.applescript.lang.ide.completion.CommandCompletionContributor"/>

        <completion.contributor language="AppleScript"
                                implementationClass="com.idea.plugin.applescript.lang.ide.completion.ApplicationNameCompletionContributor"/>
        <defaultLiveTemplatesProvider
                implementation="com.idea.plugin.applescript.lang.ide.AppleScriptLiveTemplatesProvider"/>

        <liveTemplateContext implementation="com.idea.plugin.applescript.lang.ide.AppleScriptTemplateContextType"/>

        <!-- Run Configuration-->
        <configurationType implementation="com.idea.plugin.applescript.lang.ide.run.AppleScriptConfigurationType"/>
        <runConfigurationProducer
                implementation="com.idea.plugin.applescript.lang.ide.run.AppleScriptConfigurationProducer"/>


    </extensions>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>com.idea.plugin.applescript.lang.ide.sdef.AppleScriptSystemDictionaryRegistryComponent
            </implementation-class>
        </component>
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>


    <actions>
        <!-- Add your actions here -->
        <action id="LoadDictionary" class="com.idea.plugin.applescript.lang.ide.actions.LoadDictionaryAction"
                text="Load Dictionary" description="testing">
            <add-to-group group-id="FileMenu" anchor="after" relative-to-action="FileOpenGroup"/>
        </action>

        <action id="NewAppleScriptFile"
                class="com.idea.plugin.applescript.lang.ide.actions.CreateAppleScriptFileAction">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>

</idea-plugin>
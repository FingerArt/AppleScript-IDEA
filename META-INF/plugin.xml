<idea-plugin version="2">
    <id>com.yourcompany.unique.plugin.id</id>
    <name>Plugin display name here</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTypeFactory implementation="com.idea.plugin.applescript.AppleScriptFileTypeFactory"/>
        <lang.parserDefinition language="AppleScript"
                               implementationClass="com.idea.plugin.applescript.lang.parser.AppleScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory key="AppleScript"
                                       implementationClass="com.idea.plugin.applescript.highlighter.AppleScriptSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.idea.plugin.applescript.highlighter.AppleScriptColorsAndFontsPage"/>

        <lang.formatter language="AppleScript"
                        implementationClass="com.idea.plugin.applescript.lang.formatter.AppleScriptFormattingModelBuilder"/>

        <codeStyleSettingsProvider
                implementation="com.idea.plugin.applescript.lang.formatter.settings.AppleScriptCodeStyleSettingsProvider"/>

        <langCodeStyleSettingsProvider
                implementation="com.idea.plugin.applescript.lang.formatter.settings.AppleScriptLanguageCodeStyleSettingsProvider"/>

        <lang.commenter language="AppleScript"
                        implementationClass="com.idea.plugin.applescript.lang.ide.AppleScriptCommenter"/>

        <annotator language="AppleScript"
                   implementationClass="com.idea.plugin.applescript.lang.ide.annotator.AppleScriptColorAnnotator"/>

        <!--not used -->
        <targetElementEvaluator language="AppleScript"
                                implementationClass="com.idea.plugin.applescript.lang.resolve.AppleScriptTargetElementEvaluator"/>

        <!--<gotoDeclarationHandler implementation="com.idea.plugin.applescript.lang.resolve.AppleScriptGotoDeclarationHandler"/>-->

        <!-- find usages-->
        <lang.findUsagesProvider language="AppleScript"
                                 implementationClass="com.idea.plugin.applescript.lang.ide.findUsages.AppleScriptFindUsagesProvider"/>
        <pom.declarationSearcher
                implementation="com.idea.plugin.applescript.lang.ide.search.AppleScriptHandlerDeclarationSearcher"/>
        <referencesSearch
                implementation="com.idea.plugin.applescript.lang.ide.search.AppleScriptHandlerReferencesSearch"/>

        <lang.refactoringSupport language="AppleScript"
                                 implementationClass="com.idea.plugin.applescript.lang.ide.refactoring.AppleScriptRefactoringSupportProvider"/>

        <!-- rename refactoring -->
        <lang.namesValidator language="AppleScript"
                             implementationClass="com.idea.plugin.applescript.lang.util.AppleScriptNamesValidator"/>


        <elementDescriptionProvider
                implementation="com.idea.plugin.applescript.lang.ide.findUsages.AppleScriptElementDescriptionProvider"/>

        <lang.refactoringSupport language="AppleScript"
                                 implementationClass="com.idea.plugin.applescript.lang.ide.refactoring.AppleScriptElementRefactoringSupportProvider"/>
        <lang.psiStructureViewFactory language="AppleScript"
                                      implementationClass="com.idea.plugin.applescript.lang.ide.structure.AppleScriptStructureViewFactory"/>
        <lang.structureViewExtension
                implementation="com.idea.plugin.applescript.lang.ide.structure.AppleScriptStructureViewExtension"/>

    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>